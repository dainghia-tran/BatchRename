<Window x:Class="BatchRename.ReplaceStringDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/app_configuration.png"
        Title="Replace String configuration" Height="200" Width="330" ResizeMode="NoResize">
    <Canvas>
        <TextBlock Text="From" Canvas.Left="33" Canvas.Top="32"/>

        <TextBox Name ="FromTextBox" Width="189" Canvas.Left="75" Canvas.Top="30"></TextBox>

        <TextBlock Text="To" Canvas.Left="33" Canvas.Top="65" RenderTransformOrigin="0.79,-1.429">

        </TextBlock>

        <TextBox Name ="ToTextBox" Canvas.Left="75" Canvas.Top="65" Width="189"></TextBox>

        <Button Name="SaveButton" Click="SaveButton_Click" Canvas.Left="76" Canvas.Top="107" Width="75" Height="28" 
            >Save
        </Button>

        <Button Name="CancelButton" Canvas.Left="191" Canvas.Top="107" Width="75" Height="28" IsCancel="True"
            >Cancel
        </Button>
    </Canvas>
</Window>
